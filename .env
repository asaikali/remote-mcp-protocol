# Docker Compose Port Configuration
# These environment variables configure the external ports for all services
# Modify these values if you have port conflicts or prefer different ports

# =============================================================================
# MCP Services
# =============================================================================

# SSE Server port (Server-Sent Events transport)
MCP_SSE_PORT=3001

# Streamable HTTP Server port (HTTP streaming transport)
MCP_STREAMABLE_PORT=4001

# MCP Inspector GUI port (Web interface)
MCP_INSPECTOR_PORT=6274

# MCP Inspector WebSocket port (WebSocket proxy)
MCP_INSPECTOR_WS_PORT=6277

# =============================================================================
# PostgreSQL Services
# =============================================================================

# PostgreSQL database port
PG_PORT=15432

# pgAdmin web interface port
PGADMIN_PORT=15433

# =============================================================================
# Observability Services
# =============================================================================

# Grafana dashboard port (Web interface)
GRAFANA_PORT=3000

# Prometheus metrics server port (Web interface)
PROMETHEUS_PORT=9090

# Loki log aggregation port (HTTP API)
LOKI_PORT=3100

# Tempo distributed tracing port (OTLP HTTP API)
TEMPO_PORT=3200

# Tempo Zipkin compatibility port (Zipkin HTTP API)
TEMPO_ZIPKIN_PORT=9411

# OpenTelemetry Collector gRPC port (OTLP gRPC API)
OTEL_COLLECTOR_GRPC_PORT=4317

# OpenTelemetry Collector HTTP port (OTLP HTTP API)
OTEL_COLLECTOR_HTTP_PORT=4318
